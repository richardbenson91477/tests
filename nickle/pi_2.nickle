#!/usr/bin/env nickle

# a way to estimate Ï€ c/o https://www.youtube.com/watch?v=FQ1k_YpyG_A
int num_steps = 4000;
step = 1.0 / num_steps;
step_sq = 1.0 / (num_steps * num_steps);

total = 0.0;
for (int i = 0; i < num_steps; i ++) {
    if (0 == ((i + 1) % 1000))
        printf("%d\n", i + 1);

    # 0.5 for "midpoint Riemann sum"
    x = i + 0.5;
    total += 4.0 / (1.0 + (x * x * step_sq));
}

pi_my = step * total;

printf ("got that far\n");
printf ("\n%.16f\n", pi_my)

