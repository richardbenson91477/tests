#!/usr/bin/env nickle

# a way to estimate Ï€ c/o https://www.youtube.com/watch?v=FQ1k_YpyG_A
int num_steps = 1e+4;
step = 1.0 / num_steps;

total = 0.0;
for (int i = 0; i < num_steps; i ++) {
    # 0.5 for "midpoint Riemann sum"
    x = (i + 0.5) * step; 
    total += 4.0 / (1.0 + x * x);
    if (0 == (i % 1000))
        printf("%d\r", i);
}
pi = step * total;

printf ("\n%f\n", pi);

