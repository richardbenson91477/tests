#!/usr/bin/env nickle

# a way to estimate Ï€ c/o https://www.youtube.com/watch?v=FQ1k_YpyG_A
int num_steps = 8000;
step = 1.0 / num_steps;

total = 0.0;
for (int i = 0; i < num_steps; i ++) {
    if (0 == ((i + 1) % 500))
        printf ("%d\n", i);
        #printf ("%.16f\n", step * total);

    # i + 0.5 for "midpoint Riemann sum"
    total += 4.0 / (1.0 + (i * step * i * step));
}

printf ("got that far\n");
printf ("\n%.16f\n", step * total)

